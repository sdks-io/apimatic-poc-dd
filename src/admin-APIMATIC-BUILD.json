{
  "$schema": "https://titan.apimatic.io/api/build/schema",
  "buildFileVersion": "1",
  "generatePortal": {
    "debug": {
      "publishReport": true
    },
    "pageTitle": "My First Portal",
    "navTitle": "Developer Experience Portal",
    "logoUrl": "static/images/placeholder-logo.png",
    "logoUrlDark": "static/images/placeholder-logo-dark.png",
    "logoLink": "https://www.apimatic.io",
    "faviconUrl": "static/images/favicon.ico",
    "languageConfig": {
      "http": {},
      "typescript": {},
      "ruby": {},
      "python": {},
      "java": {},
      "csharp": {},
      "php": {},
      "go": {}
    },
    "filterByRole": ["admin"],
    "portalSettings": {
      "theme": {
        "baseTheme": "cosmos",
        "colorMode": {
          "defaultMode": "system",
          "disableSwitch": false
        },
        "colors":{
          "primaryColor": {
            "light": "#0C7FF2",
            "dark": "#7CBAF8"
          },
          "linkColor": {
            "light": "#004AD7",
            "dark": "#A3D1FF"
          }
        },
        "fontSource": [
          "https://fonts.googleapis.com/css?family=Inter:100,100i,300,300i,400,400i,500,500i,700,700i,900,900",
          "https://fonts.googleapis.com/css?family=Courier+Prime:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i"
        ],
        "cssStyles": {
          "headings": {
            "fontFamily": "Inter",
            "h1": {
              "fontFamily": "Inter",
              "fontSize": "22.5px",
              "fontWeight": "500",
              "fontStyle": "normal",
              "lineHeight": "1.2"
            },
            "h2": {
              "fontFamily": "Inter",
              "fontSize": "21px",
              "fontWeight": "500",
              "fontStyle": "normal",
              "lineHeight": "1.2"
            },
            "h3": {
              "fontFamily": "Inter",
              "fontSize": "19.5px",
              "fontWeight": "500",
              "fontStyle": "normal",
              "lineHeight": "1.2"
            },
            "h4": {
              "fontFamily": "Inter",
              "fontSize": "18px",
              "fontWeight": "500",
              "fontStyle": "normal",
              "lineHeight": "1.2"
            },
            "h5": {
              "fontFamily": "Inter",
              "fontSize": "16.5px",
              "fontWeight": "500",
              "fontStyle": "normal",
              "lineHeight": "1.2"
            },
            "h6": {
              "fontFamily": "Inter",
              "fontSize": "15px",
              "fontWeight": "500",
              "fontStyle": "normal",
              "lineHeight": "1.2"
            }
          },
          "body": {
            "fontFamily": "Inter",
            "text1": {
              "fontFamily": "Inter",
              "fontSize": "15px",
              "fontWeight": "400",
              "fontStyle": "normal",
              "lineHeight": "1.75"
            },
            "text2": {
              "fontFamily": "Inter",
              "fontSize": "13.33px",
              "fontWeight": "400",
              "fontStyle": "normal",
              "lineHeight": "1.75"
            },
            "text3": {
              "fontFamily": "Inter",
              "fontSize": "11.85px",
              "fontWeight": "400",
              "fontStyle": "normal",
              "lineHeight": "1.75"
            }
          },
          "code": {
            "fontFamily": "Courier Prime, monospace",
            "blockCode": {
              "fontFamily": "Courier Prime, monospace",
              "fontSize": "15px",
              "fontWeight": "400",
              "fontStyle": "normal",
              "lineHeight": "1.75"
            },
            "inlineCode": {
              "fontFamily": "Courier Prime, monospace",
              "fontSize": "15px",
              "fontWeight": "400",
              "fontStyle": "normal",
              "lineHeight": "1.75"
            }
          }
        }
      },
      "enableHttpVerbsForAllLangs": true,
      "enableExport": true,
      "enableConsoleCalls": true
    }
  }
}